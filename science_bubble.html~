			var data = {
				label: 'Total',
				amount: 100,
				color: '#0066bb',  // color for root node, will be inherited by children
				children: [
					{ label: 'First child', amount: 30,color: '#ff997f', 
				
					children:[
						{label: 'Poop',amount:20},
						{label: 'Poopy',amount:10}]},
					{ label: 'Second child', amount: 30,color:'#75AF1D' },
					{ label: 'Third child', amount: 10,color: '#3b757a'},
					{ label: 'Fat child', amount: 10,color: '#fa8072' },
					{ label: 'Mom child', amount: 10 },
					{ label: 'Bitch child', amount: 10, color: '#ff3300' }
				]
			};
			new BubbleTree({
				data: data,
				container: '.bubbletree'
			});
		});


